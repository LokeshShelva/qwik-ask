{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "quick-assist",
  "version": "0.1.0",
  "identifier": "quick-assist",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "quick-assist",
        "width": 680,
        "height": 80,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "center": true,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "focus": true
      },
      {
        "label": "settings",
        "title": "Quick Assist Settings",
        "url": "settings.html",
        "width": 800,
        "height": 600,
        "resizable": true,
        "decorations": true,
        "transparent": false,
        "center": true,
        "visible": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
