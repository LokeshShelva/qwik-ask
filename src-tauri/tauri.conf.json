{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "QwikAsk",
  "version": "0.1.2",
  "identifier": "com.qwikask",
  "build": {
    "beforeDevCommand": "yarn dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "yarn build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Qwik Ask",
        "width": 680,
        "height": 110,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "center": true,
        "visible": false,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "focus": true
      },
      {
        "label": "settings",
        "title": "Qwik Ask Settings",
        "url": "settings.html",
        "width": 580,
        "height": 520,
        "minWidth": 480,
        "minHeight": 400,
        "resizable": true,
        "decorations": false,
        "transparent": false,
        "center": true,
        "visible": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "focus": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "nsis": {
        "installMode": "currentUser",
        "languages": [
          "English"
        ]
      },
      "wix": {
        "language": "en-US"
      }
    }
  },
  "plugins": {
    "sql": {
      "preload": [
        "sqlite:history.db"
      ]
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDU3RjlFRkVGQURDNDE1NjAKUldSZ0ZjU3Q3Ky81VndEaDVrMGhHZDNTLzV1bnVUVDRMSGNIc2R4UU5HS1AzWHVaQjBKYjZJYTAK",
      "endpoints": [
        "https://github.com/LokeshShelva/qwik-ask/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
